
@{
    ViewBag.Title = "Login";
}
<link href="~/Content/style.css" rel="stylesheet" />
<br />
<div class="container">
        <div class="alert alert-danger">
            @ViewBag.error
        </div>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to continue</h1>
            <div class="account-wall">
                <img class="profile-img" src="~/Content/img/photo.png" alt="">
                <form class="form-signin" action="@Url.Action("Login", "Account")" method="POST">
                    <input type="text" name="username" class="form-control tweet textarea " placeholder="username" />
                    <input type="password" name="password" class="form-control tweet textarea " placeholder="Password">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
            <a href="@Url.Action("SignUp", "Account")" class="text-center new-account">Create an account </a>
        </div>
    </div>

</div>
