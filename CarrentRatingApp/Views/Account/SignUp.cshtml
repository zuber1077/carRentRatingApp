
@{
    ViewBag.Title = "Sign Up";
}

@model CarrentRatingApp.Models.Account

<link href="~/Content/style.css" rel="stylesheet" />
<link href="~/Content/signup.css" rel="stylesheet" />
<br />
<div class="container">
    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
    { 
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Sign up to continue</h1>
                <div class="account-wall">
                    <img class="profile-img" src="~/Content/img/photo.png" alt="">
                    <div class="form-signin">
                        @Html.TextBoxFor(model => model.Username, new {
                       @placeholder = "username" , @Class= "tweet textarea"
                   })
                        @Html.PasswordFor(model => model.Password, new
                   {
                       @placeholder = "password",
                       @Class = "tweet textarea"
                   })
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            sign Up
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }


</div>

